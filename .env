# Максимальный дневной убыток для emergency shutdown (%)
DAILY_LOSS_MAX_PERCENT=15.0

# Процент убытка для предупреждения (%)
DAILY_LOSS_WARNING_PERCENT=10.0

# Интервал проверки дневного убытка (секунды)
